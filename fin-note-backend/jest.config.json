{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "./",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@config/(.*)$": "<rootDir>/src/config/$1",
    "^@interfaces/(.*)$": "<rootDir>/src/interfaces/$1",
    "^@modules/(.*)$": "<rootDir>/src/modules/$1",
    "^@swagger/(.*)$": "<rootDir>/src/swagger/$1"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}

